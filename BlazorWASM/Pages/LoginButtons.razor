@using BlazorWASM.Services
@namespace Login
@inject NavigationManager navMgr
@inject IAuthService authService

<AuthorizeView>
    <Authorized>
        <div class="log-btn log-out" src="img/Logout.png" @onclick="Logout">
            Log out
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="log-btn" src="img/Login.png" @onclick="Login">
            Log in
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }
}